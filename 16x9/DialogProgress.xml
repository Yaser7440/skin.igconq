<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- progressdialog -->
	<defaultcontrol always="true">10</defaultcontrol>
	<include>WindowFadeAnimation</include>
	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Curve -->
		<control type="image">
			<left>20</left>
			<top>20</top>
			<width>1880</width>
			<height>784</height>
			<texture border="0,0,0,40">common/CurveHorz.png</texture>
			<visible>Skin.HasSetting(ShowCurve)</visible>
		</control>

		<include name="Time">
			<param name="heading">$INFO[Control.GetLabel(1)]</param>
		</include>

		<!-- Heading -->
		<control type="label" id="1">
			<left>-15000</left>
			<top>40</top>
			<width>600</width>
			<height>48</height>
			<align>center</align>
			<font>Font48</font>
			<textcolor>DialogColor1</textcolor>
		</control>

		<!-- Details -->
		<control type="textbox" id="9">
			<centerleft>50%</centerleft>
			<top>125</top>
			<width>1000</width>
			<height>600</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>Font42</font>
			<autoscroll>False</autoscroll>
			<textcolor>DialogColor1</textcolor>
		</control>

		<!-- Scroll -->
		<control type="image">
			<centerleft>50%</centerleft>
			<top>600</top>
			<width>176</width>
			<height>20</height>
			<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
		</control>
		<control type="image">
			<centerleft>50%</centerleft>
			<top>600</top>
			<width>24</width>
			<height>20</height>
			<texture border="1,12,1,1" colordiffuse="DialogOverlayColorFO">common/ScrollbarGripHorizontalFO.png</texture>
			<animation effect="slide" start="-76,0" end="76,0" time="800" loop="true" tween="cubic" easing="out" condition="true">Conditional</animation>
		</control>

		<!-- Cancel -->
		<control type="button" id="10">
			<centerleft>50%</centerleft>
			<top>850</top>
			<width>1200</width>
			<height>36</height>
			<align>center</align>
			<label>106</label>
			<font>Font36</font>
		</control>

	</controls>

</window>