<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videolibrary -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol>50</defaultcontrol>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Curve -->
			<control type="image">
				<right>20</right>
				<top>20</top>
				<width>1280</width>
				<height>1040</height>
				<texture border="40,0,0,0">common/Curve.png</texture>
				<visible>Skin.HasSetting(ShowCurve)</visible>
			</control>

			<!-- Skin helper image -->
			<control type="group">
				<visible>IsEmpty(Container(50).ListItem.Plot)</visible>
				<control type="image">
					<left>120</left>
					<top>225</top>
					<width>405</width>
					<height>600</height>
					<fadetime>200</fadetime>
					<texture background="true">$INFO[Window(Home).Property(SkinHelper.PVR.Poster)]</texture>
					<aspectratio align="center">keep</aspectratio>
					<bordertexture border="1,1,1,36">views/DropShadowSmall.png</bordertexture>
					<bordersize>0,0,0,33</bordersize>
					<visible>!IsEmpty(Window(Home).Property(SkinHelper.PVR.Poster))</visible>
				</control>
				<control type="image">
					<left>120</left>
					<top>225</top>
					<width>405</width>
					<height>600</height>
					<fadetime>200</fadetime>
					<texture background="true">$INFO[Window(Home).Property(SkinHelper.PVR.Thumb)]</texture>
					<aspectratio align="center">keep</aspectratio>
					<bordertexture border="1,1,1,36">views/DropShadowSmall.png</bordertexture>
					<bordersize>0,0,0,33</bordersize>
					<visible>IsEmpty(Window(Home).Property(SkinHelper.PVR.Poster)) + !IsEmpty(Window(Home).Property(SkinHelper.PVR.Thumb))</visible>
				</control>
			</control>

			<!-- Episode Info -->
			<control type="group">
				<left>120</left>
				<top>190</top>
				<visible>!IsEmpty(Container(50).ListItem.Plot) | StringCompare(Container(50).ListItem.Label,..)</visible>

				<!-- Episode image -->
				<control type="group">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>452</width>
						<height>352</height>
						<texture border="1,1,1,69">views/DropShadow.png</texture>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>452</width>
						<height>286</height>
						<fadetime>200</fadetime>
						<texture>$INFO[ListItem.Icon]</texture>
						<aspectratio aligny="center">scale</aspectratio>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>452</width>
						<height>286</height>
						<texture>views/OverlayEpisode.png</texture>
						<visible>Skin.HasSetting(Overlays)</visible>
					</control>
				</control>

				<!-- Season & Episode Info -->
				<control type="label">
					<left>0</left>
					<top>314</top>
					<width>500</width>
					<height>45</height>
					<font>Font42</font>
					<label>$INFO[ListItem.TVShowTitle]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>366</top>
					<width>450</width>
					<height>45</height>
					<font>Font33</font>
					<textcolor>$VAR[TextColor2]</textcolor>
					<label>$INFO[ListItem.Title]</label>
				</control>
				<control type="label">
					<left>0</left>
					<top>420</top>
					<width>450</width>
					<height>45</height>
					<font>Font30</font>
					<textcolor>$VAR[TextColor3]</textcolor>
					<label>$INFO[ListItem.Season,$LOCALIZE[20373] , / ]$INFO[ListItem.Episode,$LOCALIZE[20359] ]</label>
				</control>
				<!-- Episode Plot -->
				<control type="textbox">
					<left>0</left>
					<top>474</top>
					<width>450</width>
					<height>246</height>
					<label>$VAR[Plot]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<shadowcolor>TextColor4</shadowcolor>
					<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
				</control>

			</control>

			<!-- List -->
			<control type="fixedlist" id="50">
				<left>750</left>
				<centertop>50%</centertop>
				<width>1050</width>
				<height>720</height>
				<onup>51</onup>
				<ondown>51</ondown>
				<onleft>60</onleft>
				<onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
				<pagecontrol>60</pagecontrol>
				<focusposition>3</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout height="90" width="1050">
					<control type="label">
						<left>32</left>
						<top>0</top>
						<width>1018</width>
						<height>90</height>
						<font>Font36</font>
						<label>$VAR[Label1]</label>
						<textcolor>$VAR[TextColor2]</textcolor>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>38</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>OverlayColorNF</colordiffuse>
						<animation effect="fade" start="50" end="50" condition="true">Conditional</animation>
						<visible>Skin.HasSetting(WatchedFlags)</visible>
					</control>
				</itemlayout>

				<focusedlayout height="180" width="1050">
					<control type="label">
						<left>32</left>
						<top>43</top>
						<width>1018</width>
						<height>48</height>
						<font>Font48</font>
						<label>$VAR[Label1]</label>
						<textcolor>$VAR[TextColor1]</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<control type="label">
						<left>32</left>
						<top>100</top>
						<width>1018</width>
						<height>27</height>
						<font>Font27</font>
						<label>$INFO[ListItem.StartDate] [LIGHT]$INFO[ListItem.StartTime]$INFO[ListItem.Duration, (,)][/LIGHT]</label>
						<shadowcolor>ShadowColor</shadowcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<control type="label">
						<left>32</left>
						<top>127</top>
						<width>1018</width>
						<height>27</height>
						<font>Font27</font>
						<label>$INFO[ListItem.ChannelName]</label>
						<shadowcolor>ShadowColor</shadowcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>61</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>OverlayColorFO</colordiffuse>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(50)">Conditional</animation>
						<visible>Skin.HasSetting(WatchedFlags)</visible>
					</control>
				</focusedlayout>

			</control>

			<!-- List -->
			<control type="list" id="50">
				<left>120</left>
				<top>226</top>
				<width>1020</width>
				<height>648</height>
				<onup>50</onup>
				<ondown>50</ondown>
				<onleft>3000</onleft>
				<onright>70</onright>
				<pagecontrol>70</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="535">list</viewtype>				
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1020" height="108">

					<!-- Start date -->
					<control type="label">
						<top>12</top>
						<width>300</width>
						<align>right</align>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.StartDate]</label>
					</control>

					<!-- Start time / duration -->
					<control type="label">
						<top>62</top>
						<width>300</width>
						<height>27</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>HomeNF</textcolor>
						<label>$INFO[ListItem.StartTime]$INFO[ListItem.Duration, (,)]</label>
					</control>

					<!-- Watched image -->
					<control type="image">
						<left>326</left>
						<top>38</top>
						<width>30</width>
						<height>42</height>
						<texture>$VAR[StatusOverlayWide]</texture>
						<visible>Skin.HasSetting(WatchedFlags)</visible>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>380</left>
						<top>12</top>
						<width>640</width>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>380</left>
						<top>62</top>
						<width>640</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>TextColor4</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>

				</itemlayout>

				<focusedlayout width="1020" height="108">

					<!-- Background -->
					<control type="image">
						<width>1020</width>
						<height>108</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Start date -->
					<control type="label">
						<top>12</top>
						<width>300</width>
						<align>right</align>
						<label>$INFO[ListItem.StartDate]</label>
					</control>

					<!-- Start time / duration -->
					<control type="label">
						<top>62</top>
						<width>300</width>
						<height>27</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.StartTime]$INFO[ListItem.Duration, (,)]</label>
					</control>

					<!-- Watched image -->
					<control type="image">
						<left>326</left>
						<top>38</top>
						<width>30</width>
						<height>42</height>
						<texture>$VAR[StatusOverlayWide]</texture>
						<visible>Skin.HasSetting(WatchedFlags)</visible>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>380</left>
						<top>12</top>
						<width>640</width>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>380</left>
						<top>62</top>
						<width>640</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>

				</focusedlayout>

			</control>

			<!-- Scrollbar (list) -->
			<control type="scrollbar" id="60">
				<left>690</left>
				<centertop>50%</centertop>
				<width>20</width>
				<height>720</height>
				<onleft>3000</onleft>
				<onright>50</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>OverlayColorNF</colordiffuse>
				<texturesliderbackground border="11,1,1,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="11,1,1,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="11,1,1,1" colordiffuse="DialogOverlayColorFO">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

			<!-- Recording count -->
			<control type="grouplist">
				<right>120</right>
				<bottom>110</bottom>
				<width>800</width>
				<height>44</height>
				<itemgap>6</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$INFO[Container(50).NumItems]</label>
					<font>Font25</font>
					<textcolor>$VAR[TextColor2]</textcolor>
				</control>

				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$VAR[ContentType]</label>
					<font>Font33</font>
					<textcolor>$VAR[TextColor2]</textcolor>
				</control>

			</control>

		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Options -->
		<control type="group" id="9002">
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture colordiffuse="44000000">dialogs/DialogTextBackground.png</texture>
				<animation effect="fade" start="0" end="100" time="200">Visible</animation>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
				<visible>Control.HasFocus(9001)</visible>
			</control>
			<control type="group">
				<left>-450</left>
				<top>0</top>
				<animation effect="slide" start="0,0" end="450,0" time="200" condition="ControlGroup(9002).HasFocus">Conditional</animation>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>450</width>
					<height>1080</height>
					<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3000">
					<left>20</left>
					<top>20</top>
					<width>410</width>
					<height>1040</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>50</onleft>
					<onright>50</onright>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<defaultcontrol always="true">99</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<include name="SideMenuAnimation">
						<param name="containerID">3000</param>
					</include>

					<!-- Sort by -->
					<control type="button" id="3">
						<height>52</height>
						<label>103</label>
						<visible>Control.IsEnabled(3)</visible>
					</control>
					<!-- Sort ascending/descending -->
					<control type="togglebutton" id="4">
						<height>52</height>
						<label>584</label>
						<altlabel>585</altlabel>
						<usealttexture>Container.SortDirection(Descending)</usealttexture>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					<!-- Channel Groups -->
					<control type="button" id="28">
						<height>52</height>
						<label>-</label>
						<visible>Control.IsEnabled(28)</visible>
					</control>
					<!-- Group recording items by folder structure -->
					<control type="radiobutton" id="5">
						<height>52</height>
						<label>19270</label>
						<visible>Window.IsActive(TVRecordings) | Window.IsActive(RadioRecordings)</visible>
					</control>
					<!-- Show deleted recordings -->
					<control type="radiobutton" id="7">
						<height>52</height>
						<label>19184</label>
					</control>

					<control type="image" id="81">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>3</height>
						<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
					</control>

					<!-- Channels -->
					<control type="button" id="100">
						<height>52</height>
						<onclick condition="Window.IsActive(TVChannels) | Window.IsActive(RadioChannels)">NextChannelGroup</onclick>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVChannels)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioChannels)</onclick>
						<onclick>SetFocus(10)</onclick>
						<label>19019</label>
					</control>
					<!-- Guide -->
					<control type="button" id="102">
						<height>52</height>
						<label>22020</label>
						<onclick condition="Window.IsActive(TVGuide) | Window.IsActive(RadioGuide)">NextChannelGroup</onclick>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVGuide)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioGuide)</onclick>
						<onclick>SetFocus(10)</onclick>
					</control>
					<!-- Recordings -->
					<control type="button" id="103">
						<height>52</height>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVRecordings)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioRecordings)</onclick>
						<onclick>SetFocus(10)</onclick>
						<label>19163</label>
					</control>
					<!-- Timers -->
					<control type="button" id="35">
						<height>52</height>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVTimers)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioTimers)</onclick>
						<onclick>SetFocus(50)</onclick>
						<label>19040</label>
					</control>
					<!-- Rules -->
					<control type="button" id="36">
						<height>52</height>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVTimerRules)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioTimerRules)</onclick>
						<onclick>SetFocus(50)</onclick>
						<label>Rules</label>
					</control>
					<!-- Search -->
					<control type="button" id="37">
						<height>52</height>
						<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVSearch)</onclick>
						<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioSearch)</onclick>
						<onclick>SetFocus(50)</onclick>
						<label>137</label>
					</control>
					
				</control>
			</control>
		</control>

	</controls>

</window>