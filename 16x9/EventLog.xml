<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- Event Log -->
	<defaultcontrol always="true">570</defaultcontrol>
	<include>DialogZoomAnimation</include>
	<views>570</views>
	<controls>
		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Image -->
		<control type="image">
			<left>120</left>
			<top>225</top>
			<width>405</width>
			<height>600</height>
			<texture>$INFO[ListItem.Icon]</texture>
			<colordiffuse>OverlayColorFO</colordiffuse>
			<aspectratio align="center" aligny="center">keep</aspectratio>
		</control>

		<!-- List -->
		<control type="fixedlist" id="570">
			<left>750</left>
			<centertop>50%</centertop>
			<width>1050</width>
			<height>720</height>
			<onup>570</onup>
			<ondown>570</ondown>
			<onleft>60</onleft>
			<onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
			<pagecontrol>60</pagecontrol>
			<focusposition>3</focusposition>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<viewtype label="535">list</viewtype>

			<itemlayout height="90" width="1050">
				<control type="label">
					<left>32</left>
					<top>0</top>
					<width>1018</width>
					<height>90</height>
					<font>Font36</font>
					<label>$VAR[Label1]</label>
					<textcolor>$VAR[TextColor2]</textcolor>
				</control>
			</itemlayout>

			<focusedlayout height="180" width="1050">
				<control type="label">
					<left>32</left>
					<top>29</top>
					<width>1018</width>
					<height>48</height>
					<font>Font48</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(570)">Conditional</animation>
				</control>
				<control type="label">
					<left>32</left>
					<top>86</top>
					<width>1018</width>
					<height>54</height>
					<font>Font27</font>
					<label>$INFO[ListItem.Property(Event.Description)][CR]$INFO[ListItem.Label2]</label>
					<textcolor>$VAR[TextColor2]</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(570)">Conditional</animation>
				</control>

			</focusedlayout>

		</control>

		<!-- Scrollbar -->
		<control type="scrollbar" id="60">
			<left>690</left>
			<centertop>50%</centertop>
			<width>20</width>
			<height>720</height>
			<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
			<onright>570</onright>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<colordiffuse>OverlayColorNF</colordiffuse>
			<texturesliderbackground border="11,1,1,1">common/ScrollBackground.png</texturesliderbackground>
			<texturesliderbar border="11,1,1,1">common/ScrollbarGripNF.png</texturesliderbar>
			<texturesliderbarfocus border="11,1,1,1" colordiffuse="$VAR[DialogColor1]">common/ScrollbarGripFO.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<visible>!Skin.HasSetting(Scrollbars)</visible>
		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Options -->
		<control type="group">
			<include>OptionsAnimation</include>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

			<!-- Background -->
			<include>OptionsBackgroundImage</include>

			<!-- Main group -->
			<control type="group">
				<left>85</left>
				<top>297</top>

				<!-- Heading -->
				<control type="label">
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<left>0</left>
					<top>34</top>
					<width>1200</width>
					<height>72</height>
					<label>$VAR[CustomMenuHeading]</label>
					<font>Font72</font>
					<textcolor>$VAR[DialogColor1]</textcolor>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>570</onleft>
					<onright>570</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">3001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="3001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Sort -->
					<control type="togglebutton" id="4">
						<include>OptionButtons</include>
						<label>584</label>
						<altlabel>585</altlabel>
						<usealttexture>Container.SortDirection(Descending)</usealttexture>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					<!-- Level -->
					<control type="button" id="21">
						<include>OptionButtons</include>
						<label>-</label>
					</control>
					<!-- Only current level -->
					<control type="radiobutton" id="22">
						<include>OptionButtons</include>
						<label>-</label>
					</control>
					<!-- Clear -->
					<control type="button" id="20">
						<include>OptionButtons</include>
						<label>192</label>
					</control>
				</control>

			</control>

		</control>

	</controls>

</window>
