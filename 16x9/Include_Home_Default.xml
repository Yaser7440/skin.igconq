<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="HomeDefault">

		<!-- Main list -->
		<control type="wraplist" id="9000">
			<left>120</left>
			<top>643</top>
			<width>460</width>
			<height>360</height>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>noop</onleft>
			<onright>9001</onright>
			<focusposition>1</focusposition>
			<defaultcontrol>3</defaultcontrol>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<visible allowhiddenfocus="true">!Control.HasFocus(9001)</visible>
			<animation type="Hidden" reversible="true">
				<effect type="fade" start="100" end="0" time="320" tween="sine" easing="in" />
				<effect type="slide" start="0,0" end="-600,0" time="160" tween="sine" easing="in" />
			</animation>

			<itemlayout width="460" height="120">
				<control type="label">
					<left>0</left>
					<top>0</top>
					<width>460</width>
					<height>120</height>
					<label>$INFO[ListItem.Label]</label>
					<font>Font42</font>
					<textcolor>HomeNF</textcolor>
				</control>
			</itemlayout>

			<focusedlayout width="460" height="120">
				<control type="label">
					<left>0</left>
					<top>0</top>
					<width>460</width>
					<height>120</height>
					<label>$INFO[ListItem.Label]</label>
					<font>Font72</font>
					<textcolor>TextColor1</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(9000)">Conditional</animation>
				</control>
			</focusedlayout>

			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>

		</control>

		<!-- Sub menu -->
		<control type="fixedlist" id="9001">
			<left>120</left>
			<top>643</top>
			<width>460</width>
			<height>360</height>
			<onup>9001</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>SetFocus(9002,0)</onright>
			<focusposition>2</focusposition>
			<orientation>vertical</orientation>
			<defaultcontrol always="true">1</defaultcontrol>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<visible allowhiddenfocus="true">Control.HasFocus(9001)</visible>
			<animation type="Visible" reversible="false">
				<effect type="fade" start="0" end="100" time="320" tween="sine" easing="in" />
			</animation>

			<itemlayout width="400" height="72">
				<control type="label">
					<top>0</top>
					<width>400</width>
					<height>72</height>
					<label>$INFO[ListItem.Label]</label>
					<font>Font30</font>
					<textcolor>HomeNF</textcolor>
				</control>
			</itemlayout>

			<focusedlayout width="460" height="72">
				<control type="label">
					<top>0</top>
					<width>460</width>
					<height>72</height>
					<label>$INFO[ListItem.Label]</label>
					<font>Font42</font>
					<textcolor>TextColor1</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(9001)">Conditional</animation>
				</control>
			</focusedlayout>

			<content>
				<include>skinshortcuts-submenu</include>
			</content>

		</control>

		<!-- Sub menu heading -->
		<control type="label">
			<top>636</top>
			<right>120</right>
			<width>1000</width>
			<height>33</height>
			<font>Font33</font>
			<align>right</align>
			<textcolor>$VAR[SubMenuColor]</textcolor>
			<label>$INFO[Container(9002).ListItem.Label]</label>
			<visible>Control.HasFocus(9002)</visible>
			<visible>!StringCompare(Container(9000).ListItem.Property(widgetType),episodes)</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
		</control>
		<control type="label">
			<top>636</top>
			<right>120</right>
			<width>1000</width>
			<height>33</height>
			<font>Font33</font>
			<align>right</align>
			<textcolor>$VAR[SubMenuColor]</textcolor>
			<label>(s$INFO[Container(9002).ListItem.Season]e$INFO[Container(9002).ListItem.Episode]) $INFO[Container(9002).ListItem.Label]</label>
			<visible>Control.HasFocus(9002)</visible>
			<visible>StringCompare(Container(9000).ListItem.Property(widgetType),episodes)</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
		</control>

		<!-- Sub menu label -->
		<control type="label">
			<top>636</top>
			<right>120</right>
			<width>1000</width>
			<height>33</height>
			<font>Font33</font>
			<align>right</align>
			<textcolor>$VAR[SubMenuColor]</textcolor>
			<label>$INFO[Container(9000).ListItem.Property(widgetName)]</label>
			<visible>!Control.HasFocus(9002)</visible>
			<visible>!Container(9000).OnNext + !Container(9000).OnPrevious</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
		</control>

		<!-- Weather sub menu -->
		<control type="list" id="9003">
			<left>2605</left>
			<top>688</top>
			<width>1218</width>
			<height>339</height>
			<onup>Control.Move(9000,-1)</onup>
			<onup>PageUp</onup>
			<onup>9000</onup>
			<ondown>Control.Move(9000,1)</ondown>
			<ondown>PageUp</ondown>
			<ondown>9000</ondown>
			<onleft>9000</onleft>
			<onright>noop</onright>
			<orientation>horizontal</orientation>
			<viewtype label="">list</viewtype>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<visible>StringCompare(Container(9000).ListItem.Property(Widget),WeatherWidget)</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<animation effect="fade" start="0" end="100" time="200" delay="100" >Visible</animation>
			<animation effect="slide" start="0,0" end="-1000,0" time="0" condition="StringCompare(Container(9003).NumItems,1)">conditional</animation>
			<animation effect="slide" start="0,0" end="-1203,0" time="0" condition="StringCompare(Container(9003).NumItems,2)">conditional</animation>
			<animation effect="slide" start="0,0" end="-1406,0" time="0" condition="StringCompare(Container(9003).NumItems,3)">conditional</animation>
			<animation effect="slide" start="0,0" end="-1609,0" time="0" condition="StringCompare(Container(9003).NumItems,4)">conditional</animation>
			<animation effect="slide" start="0,0" end="-1812,0" time="0" condition="StringCompare(Container(9003).NumItems,5)">conditional</animation>
			<animation effect="slide" start="0,0" end="-2015,0" time="0" condition="IntegerGreaterThan(Container(9003).NumItems,5)">conditional</animation>

			<itemlayout width="203" height="339">
				<control type="label">
					<top>2</top>
					<width>203</width>
					<height>33</height>
					<font>Font33</font>
					<align>center</align>
					<textcolor>TextColor2</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="image">
					<left>30</left>
					<top>56</top>
					<width>150</width>
					<height>150</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
				</control>
				<control type="label">
					<top>249</top>
					<width>203</width>
					<height>25</height>
					<font>Font25</font>
					<align>center</align>
					<textcolor>TextColor2</textcolor>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</itemlayout>

			<focusedlayout width="203" height="339">
				<control type="label">
					<top>2</top>
					<width>203</width>
					<height>33</height>
					<font>Font33</font>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>TextColor2</textcolor>
				</control>
				<control type="image">
					<left>30</left>
					<top>56</top>
					<width>150</width>
					<height>150</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
				</control>
				<control type="label">
					<top>249</top>
					<width>203</width>
					<height>25</height>
					<font>Font25</font>
					<align>center</align>
					<textcolor>TextColor2</textcolor>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</focusedlayout>
			<content>
				<item>
					<onclick>noop</onclick>
					<label>$VAR[Day0]</label>
					<label2>$INFO[Window(Weather).Property(Day0.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day0.HighTemp)]$INFO[System.TemperatureUnits]</label2>
					<icon>$INFO[Window(Weather).Property(Day0.OutlookIcon)]</icon>
					<visible>!IsEmpty(Window(Weather).Property(Day0.Title))</visible>
				</item>
				<item>
					<onclick>noop</onclick>
					<label>$VAR[Day1]</label>
					<label2>$INFO[Window(Weather).Property(Day1.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day1.HighTemp)]$INFO[System.TemperatureUnits]</label2>
					<icon>$INFO[Window(Weather).Property(Day1.OutlookIcon)]</icon>
					<visible>!IsEmpty(Window(Weather).Property(Day1.Title))</visible>
				</item>
				<item>
					<onclick>noop</onclick>
					<label>$VAR[Day2]</label>
					<label2>$INFO[Window(Weather).Property(Day2.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day2.HighTemp)]$INFO[System.TemperatureUnits]</label2>
					<icon>$INFO[Window(Weather).Property(Day2.OutlookIcon)]</icon>
					<visible>!IsEmpty(Window(Weather).Property(Day2.Title))</visible>
				</item>
				<item>
					<onclick>noop</onclick>
					<label>$VAR[Day3]</label>
					<label2>$INFO[Window(Weather).Property(Day3.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day3.HighTemp)]$INFO[System.TemperatureUnits]</label2>
					<icon>$INFO[Window(Weather).Property(Day3.OutlookIcon)]</icon>
					<visible>!IsEmpty(Window(Weather).Property(Day3.Title))</visible>
				</item>
				<item>
					<onclick>noop</onclick>
					<label>$VAR[Day4]</label>
					<label2>$INFO[Window(Weather).Property(Day4.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day4.HighTemp)]$INFO[System.TemperatureUnits]</label2>
					<icon>$INFO[Window(Weather).Property(Day4.OutlookIcon)]</icon>
					<visible>!IsEmpty(Window(Weather).Property(Day4.Title))</visible>
				</item>
				<item>
					<onclick>noop</onclick>
					<label>$VAR[Day5]</label>
					<label2>$INFO[Window(Weather).Property(Day5.LowTemp)]$INFO[System.TemperatureUnits] / $INFO[Window(Weather).Property(Day5.HighTemp)]$INFO[System.TemperatureUnits]</label2>
					<icon>$INFO[Window(Weather).Property(Day5.OutlookIcon)]</icon>
					<visible>!IsEmpty(Window(Weather).Property(Day5.Title))</visible>
				</item>
			</content>

		</control>

		<include>skinshortcuts-template-widget-default</include>

	</include>

</includes>