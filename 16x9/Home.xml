<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- home -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload condition="StringCompare(Skin.String(menuStyle),vertical)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu|igconq-quicknav&amp;levels=1&amp;minitems=20)</onload>
	<onload condition="!StringCompare(Skin.String(menuStyle),vertical)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu|igconq-quicknav&amp;levels=1)</onload>
	<onload>Skin.SetBool(enable.smartish.widgets)</onload>
	<onload>Skin.SetString(SkinHelper.RandomFanartDelay,7)</onload>
	<onload>Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
	<onload>noop</onload>

	<include>skinshortcuts-template-widgetReloadTrick</include>

	<controls>

		<!-- Hidden control to load weather conditions -->
		<control type="label">
			<font>-</font>
			<label>$INFO[Weather.Conditions]</label>
		</control>

		<!-- Background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>white.png</texture>
		</control>

		<include>WindowBackgroundImage</include>

		<control type="image">
			<include>FullscreenDimensions</include>
			<include>VisibleFadeAnimation</include>
			<fadetime>400</fadetime>
			<colordiffuse>FanartDiffuse</colordiffuse>
			<!--texture background="true" diffuse="diffuse.png" colordiffuse="$VAR[FanartColor]">$VAR[widgetBackground]</texture-->
			<texture background="true">$VAR[widgetBackground]</texture>
			<animation effect="fade" start="100" end="0" condition="[Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
			<animation effect="fade" start="70" end="70" condition="![Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
			<visible>!Window.IsActive(1111)</visible>
		</control>

		<!-- Time -->
		<control type="group">
			<visible>!Window.IsVisible(1111)</visible>
			<include name="Time">
				<param name="heading"></param>
			</include>
		</control>
		
		<!-- Home layout -->
		<control type="group">
			<include>WindowFadeAnimation</include>
			<!-- Lumos/Horizontal -->
			<animation type="Conditional" condition="Window.IsActive(1111) + IsEmpty(Skin.String(menuStyle))">
				<effect type="slide" start="0,0" end="0,200" time="200" />
				<effect type="fade" start="100" end="0" time="200" />
			</animation>
			<include condition="IsEmpty(Skin.String(menuStyle))">HomeLumos</include>

			<animation type="Conditional" condition="Window.IsActive(1111) + StringCompare(Skin.String(menuStyle),horizontal)">
				<effect type="slide" start="0,0" end="0,-200" time="200" />
				<effect type="fade" start="100" end="0" time="200" />
			</animation>
			<include condition="StringCompare(Skin.String(menuStyle),horizontal)">HomeHorizontal</include>

			<!-- Vertical -->
			<animation type="Conditional" condition="Window.IsActive(1111) + StringCompare(Skin.String(menuStyle),vertical)">
				<effect type="slide" start="0,0" end="200,0" time="200" />
				<effect type="fade" start="100" end="0" time="200" />
			</animation>
			<include condition="StringCompare(Skin.String(menuStyle),vertical)">HomeDefault</include>
			
		</control>

		<!-- Test labels -->
		<!--include>skinshortcuts-template-testLabels</include-->

	</controls>

</window>