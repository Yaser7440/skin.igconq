<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- home -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;minitems=20)</onload>
	<onload>Skin.SetBool(enable.smartish.widgets)</onload>
	<onload condition="System.HasAddon(script.favourites)">RunScript(script.favourites)</onload>
	<onload condition="Window.Previous(startup)">Skin.Reset(mypassword)</onload>
	<onload condition="!Window.Previous(startup)">AlarmClock(parental,Skin.Reset(mypassword),2,Silent)</onload>
	<onload>Skin.SetString(SkinHelper.RandomFanartDelay,7)</onload>
	<onload>Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
	<onload>Skin.SetBool(SkinHelper.WidgetContainer)</onload>
	<onload>Skin.SetBool(SmartShortcuts.playlists)</onload>
	<onload>Skin.SetBool(SmartShortcuts.favorites)</onload>
	<onload>Skin.SetBool(SmartShortcuts.plex)</onload>
	<onload>Skin.SetBool(SmartShortcuts.emby)</onload>
	<onload>Skin.SetBool(SmartShortcuts.netflix)</onload>

	<controls>

		<!-- Hidden control to load weather conditions -->
		<control type="label">
			<font>-</font>
			<label>$INFO[Weather.Conditions]</label>
		</control>

		<!-- Background -->
		<include>skinshortcuts-template-background-fanart</include>
		<control type="visualisation">
			<include>FullscreenDimensions</include>
			<visible>Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)</visible>
		</control>
		<control type="videowindow">
			<include>FullscreenDimensions</include>
			<visible>Player.HasVideo + Skin.HasSetting(BackgroundVideo)</visible>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
			<aspectratio>keep</aspectratio>
			<timeperimage>10000</timeperimage>
			<fadetime>2000</fadetime>
			<randomize>true</randomize>
			<visible>Player.HasAudio + System.HasAddon(script.artistslideshow) + Skin.HasSetting(EnableArtistFanart)</visible>
			<animation effect="fade" start="100" end="50" time="0" condition="Skin.HasSetting(FadeArtistFanart)">Conditional</animation>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="image">
			<include>FullscreenDimensions</include>
			<fadetime>320</fadetime>
			<texture>$VAR[BackgroundImage]</texture>
			<animation effect="fade" start="100" end="80" condition="[Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<timeperimage>10000</timeperimage>
			<fadetime>320</fadetime>
			<randomize>true</randomize>
			<imagepath diffuse="diffuse.png">$VAR[HomeBackgroundImage]</imagepath>
			<animation effect="fade" start="80" end="0" condition="[Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
			<animation effect="fade" start="70" end="70" condition="![Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
			<visible>SubString(Skin.String(CustomBackgroundImage),extras/backgrounds/Default.jpg) | IsEmpty(Skin.String(CustomBackgroundImage))</visible>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<timeperimage>10000</timeperimage>
			<fadetime>320</fadetime>
			<randomize>true</randomize>
			<colordiffuse>FanartDiffuse</colordiffuse>
			<imagepath>$VAR[HomeBackgroundImage]</imagepath>
			<animation effect="fade" start="100" end="0" condition="[Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
			<visible>!SubString(Skin.String(CustomBackgroundImage),extras/backgrounds/Default.jpg) + !IsEmpty(Skin.String(CustomBackgroundImage))</visible>
			<aspectratio>keep</aspectratio>
		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Main controls -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Home layout -->
			<include>HomeDefault</include>
		</control>

	</controls>

</window>