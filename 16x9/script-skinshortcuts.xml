<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- script-skinshortcuts -->
	<defaultcontrol always="true">211</defaultcontrol>
	<include>WindowFadeAnimation</include>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>
		
		<!-- Curve -->
		<control type="image">
			<right>20</right>
			<top>20</top>
			<width>1280</width>
			<height>1040</height>
			<texture border="40,0,0,0">common/Curve.png</texture>
			<visible>Skin.HasSetting(ShowCurve)</visible>
		</control>

		<include name="Time">
			<param name="heading">$INFO[Control.GetLabel(500)]</param>
		</include>

		<!-- Heading -->
		<control type="label" id="500">
			<left>-1500000</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
		</control>

		<!-- Move down -->
		<control type="button" id="304">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<onleft>noop</onleft>
			<onright>303</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>

		<!-- Move up -->
		<control type="button" id="303">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<onleft>304</onleft>
			<onright>9000</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>

		<!-- Left list -->
		<control type="list" id="211">
			<left>150</left>
			<top>228</top>
			<width>360</width>
			<height>660</height>
			<onleft>noop</onleft>
			<onright>304</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<itemlayout width="360" height="66">
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<textcolor>$VAR[DialogColor2]</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>!SubString(Window.Property(groupname),.1,Right)</visible>
				</control>
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<textcolor>$VAR[DialogColor2]</textcolor>
					<label>$INFO[ListItem.Property(widgetName)]</label>
					<visible>SubString(Window.Property(groupname),.1,Right)</visible>
				</control>
			</itemlayout>

			<focusedlayout width="360" height="66">
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(211)">Conditional</animation>
					<visible>!SubString(Window.Property(groupname),.1,Right)</visible>
				</control>
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Property(widgetName)]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(211)">Conditional</animation>
					<visible>SubString(Window.Property(groupname),.1,Right)</visible>
				</control>
				<control type="image">
					<left>290</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowDownNF.png</texture>
					<visible>!Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>325</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowUpNF.png</texture>
					<visible>!Control.HasFocus(303)</visible>
				</control>
				<control type="image">
					<left>290</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowDownFO.png</texture>
					<visible>Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>325</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowUpFO.png</texture>
					<visible>Control.HasFocus(303)</visible>
				</control>
			</focusedlayout>

		</control>

		<!-- Right grouplist -->
		<control type="grouplist" id="9000">
			<left>750</left>
			<top>228</top>
			<width>1050</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>303</onleft>
			<onright>noop</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<!-- Change shortcut -->
			<control type="button" id="401">
				<width>1050</width>
				<height>60</height>
				<label>$ADDON[script.skinshortcuts 32048]</label>
				<visible>!SubString(Window.Property(groupname),.1,Right)</visible>
			</control>

			<!-- Change label -->
			<control type="button" id="305">
				<width>1050</width>
				<height>40</height>
				<label>  -  $ADDON[script.skinshortcuts 32025]</label>
				<label2>$INFO[Container(211).ListItem.Label]</label2>
				<visible>!SubString(Window.Property(groupname),.1,Right)</visible>
			</control>

			<!-- Change action -->
			<control type="button" id="307">
				<width>1050</width>
				<height>40</height>
				<label>  -  $ADDON[script.skinshortcuts 32027]</label>
				<label2>$INFO[Container(211).ListItem.Property(displaypath)]</label2>
				<visible>!SubString(Window.Property(groupname),.1,Right)</visible>
			</control>

			<!-- Change Thumbnail -->
			<control type="button" id="306">
				<width>1050</width>
				<height>40</height>
				<label>  -  Choose thumbnail</label>
				<visible>StringCompare(Window.Property(groupname),mainmenu) + IsEmpty(Skin.String(menuStyle))</visible>
			</control>

			<!-- Edit widget -->
			<control type="button" id="312">
				<width>1050</width>		
				<height>60</height>		
				<label>$ADDON[script.skinshortcuts 32044]</label>
				<label2>$INFO[Container(211).ListItem.Property(widgetName)]</label2>
				<onclick condition="SubString(Window.Property(groupname),.1,Right)">SetProperty(customProperty,path)</onclick>
				<onclick condition="SubString(Window.Property(groupname),.1,Right)">SetProperty(customValue,randomValueSoTheMenuItemWillSave)</onclick>
				<onclick condition="SubString(Window.Property(groupname),.1,Right)">SendClick(404)</onclick>
				<visible>StringCompare(Window.Property(groupname),mainmenu) | SubString(Window.Property(groupname),.1,Right)</visible>
			</control>

			<!-- Change size option -->
			<control type="button" id="601">
				<width>1050</width>
				<height>40</height>
				<label>  -  Size</label>
				<label2>$VAR[skinshortcuts-size]</label2>
				<enable>!IsEmpty(Container(211).ListItem.Property(widget)) + !StringCompare(Container(211).ListItem.Property(widget),WeatherWidget)</enable>
				<visible>IsEmpty(Skin.String(menuStyle))</visible>
			</control>

			<!-- Change artwork -->
			<control type="button" id="602">
				<width>1050</width>
				<height>40</height>
				<label>  -  Artwork</label>
				<label2>$VAR[skinshortcuts-art]</label2>
				<enable>!IsEmpty(Container(211).ListItem.Property(widget)) + !StringCompare(Container(211).ListItem.Property(widget),WeatherWidget) + !Container(8000).IsUpdating</enable>
			</control>
			<!-- Fallback artwork -->
			<control type="button" id="603">
				<width>1050</width>
				<height>40</height>
				<label>  -  Fallback Artwork</label>
				<label2>$VAR[skinshortcuts-fallbackart]</label2>
				<enable>!IsEmpty(Container(211).ListItem.Property(widget)) + !StringCompare(Container(211).ListItem.Property(widget),WeatherWidget) + !Container(8000).IsUpdating</enable>
			</control>

			<!-- Shadow -->
			<control type="radiobutton" id="604">
				<width>1050</width>
				<height>40</height>
				<label>  -  Shadow</label>
				<enable>!IsEmpty(Container(211).ListItem.Property(widget)) + !StringCompare(Container(211).ListItem.Property(widget),WeatherWidget)</enable>
				<selected>IsEmpty(Container(211).ListItem.Property(shadow))</selected>
			</control>

			<!-- Change autoscroll option -->
			<control type="radiobutton" id="600">
				<width>1050</width>
				<height>40</height>
				<label>  -  Autoscroll</label>
				<selected>!IsEmpty(Container(211).ListItem.Property(autoscroll))</selected>
				<visible>IsEmpty(Skin.String(menuStyle))</visible>
			</control>

			<!-- Edit hub widgets -->
			<control type="button" id="406">
				<width>1050</width>
				<height>60</height>
				<label>Choose hub widgets</label>
				<enable>!IsEmpty(Container(211).ListItem.Property(widget)) | !IsEmpty(Skin.String(menuStyle))</enable>
				<visible>StringCompare(Window.Property(groupname),mainmenu)</visible>
			</control>

			<!-- Edit Submenu -->
			<control type="button" id="405">
				<width>1050</width>
				<height>60</height>
				<label>Edit submenu</label>
				<visible>StringCompare(Window.Property(groupname),mainmenu)</visible>
			</control>

			<!-- Remove -->
			<control type="button" id="302">
				<width>1050</width>
				<height>60</height>
				<label>-</label>
			</control>

			<!-- Add item -->
			<control type="button" id="301">
				<width>1050</width>
				<height>60</height>
				<label>$ADDON[script.skinshortcuts 32000]</label>
			</control>

		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9001">
			<left>750</left>
			<top>926</top>
			<width>1620</width>
			<itemgap>0</itemgap>
			<onleft>303</onleft>
			<onright>noop</onright>
			<onup>9000</onup>
			<ondown>noop</ondown>
			<orientation>horizontal</orientation>

			<!-- OK Button -->
			<control type="button" id="10">
				<width>200</width>
				<label>186</label>
				<onclick>Close</onclick>
			</control>

			<!-- Restore -->
			<control type="button" id="308">
				<width>400</width>
				<label>$ADDON[script.skinshortcuts 32028]</label>
			</control>

		</control>

		<!-- Select dialog background workaround -->
		<control type="group">
			<visible>Window.IsActive(DialogSelect.xml) | Window.IsActive(DialogProgress.xml)</visible>
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200" delay="150">Hidden</animation>
			<include>WindowBackgroundImage</include>
		</control>

		<control type="button" id="404">
			<left>-1000</left>
			<top>-1000</top>
			<width>10</width>
			<label>Hidden button</label>
		</control>

		<control type="wraplist" id="8000">
			<left>-1000</left>
			<top>-1000</top>
			<width>100</width>
			<height>100</height>
			<itemlayout height="100" width="100" />
			<focusedlayout height="100" width="100" />
			<content>$INFO[Container(211).ListItem.Property(widgetPath)]</content>
		</control>


	</controls>

</window>
