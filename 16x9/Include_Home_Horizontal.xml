<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="HomeHorizontal">

		<!-- Main list -->
		<control type="wraplist" id="9000">
			<left>-70</left>
			<top>765</top>
			<width>2060</width>
			<height>360</height>
			<ondown>SetProperty(currentMenu,$INFO[Container(9000).ListItem.Property(submenuVisibility)],Home)</ondown>
			<ondown>ActivateWindow(1111)</ondown>
			<onup>9002</onup>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<focusposition>2</focusposition>
			<defaultcontrol>3</defaultcontrol>
			<orientation>horizontal</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<itemlayout width="400" height="120">
				<control type="label">
					<top>0</top>
					<width>400</width>
					<height>120</height>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
					<font>Font42</font>
					<textcolor>HomeNF</textcolor>
				</control>
			</itemlayout>

			<focusedlayout width="460" height="120">
				<control type="label">
					<top>0</top>
					<width>460</width>
					<height>120</height>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
					<font>Font72</font>
					<textcolor>TextColor1</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(9000)">Conditional</animation>
				</control>
			</focusedlayout>

			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>

		</control>

		<!-- Widgets -->
		<control type="group" id="9002">
			<include>skinshortcuts-template-horizontal</include>
		</control>

		<!-- Widget details -->
		<control type="label">
			<top>900</top>
			<left>590</left>
			<width>1218</width>
			<height>280</height>
			<font>Font33</font>
			<align>right</align>
			<aligny>top</aligny>
			<label>$VAR[widgetDetails]</label>
			<visible>!StringCompare(Container(9000).ListItem.Property(widget),WeatherWidget) + ControlGroup(9002).HasFocus</visible>
		</control>

		<!-- Widget Heading -->
		<control type="label">
			<top>600</top>
			<left>0</left>
			<width>1920</width>
			<height>280</height>
			<font>Font33</font>
			<align>center</align>
			<aligny>top</aligny>
			<label>$INFO[Container(9000).ListItem.Property(widgetName)]</label>
			<visible>!Skin.HasSetting(HideSubmenuHeading) + !ControlGroup(9002).HasFocus</visible>
		</control>

		<!-- Reloading indicator -->
		<control type="group">
			<left>1820</left>
			<top>980</top>
			<include>skinshortcuts-template-reloading</include>
		</control>

	</include>

</includes>
