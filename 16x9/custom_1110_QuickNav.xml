<?xml version="1.0" encoding="UTF-8"?>
<window id="1110" type="dialog">
	<!-- Quick Nav -->
	<defaultcontrol always="true">7000</defaultcontrol>
	<controls>

		<!-- Background image -->
		<include>DialogFadeBackgroundImage</include>
		<control type="group">
			<animation effect="slide" start="-450,0" time="200">WindowOpen</animation>
			<animation effect="slide" end="-450,0" time="200">WindowClose</animation>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>450</width>
				<height>1080</height>
				<texture colordiffuse="$INFO[Skin.String(color.background)]">dialogs/Background.png</texture>
			</control>

			<control type="list" id="7000">
				<left>20</left>
				<top>20</top>
				<width>410</width>
				<height>1040</height>
				<onright>Close</onright>
				<include name="SideMenuAnimation">
					<param name="containerID">7000</param>
				</include>
				<itemlayout width="410" height="52">
					<control type="label">
						<width>410</width>
						<height>52</height>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[DialogColor2]</textcolor>
						<align>center</align>
					</control>
				</itemlayout>
				<focusedlayout width="410" height="52">
					<control type="label">
						<width>410</width>
						<height>52</height>
						<label>$INFO[ListItem.Label]</label>
						<align>center</align>
					</control>
				</focusedlayout>
				<content>
					<include>skinshortcuts-group-igconq-quicknav</include>
				</content>
			</control>
		</control>

	</controls>

</window>