<?xml version="1.0" encoding="UTF-8"?>
<window id="1111" type="dialog">
	<!-- Quick Nav -->
	<defaultcontrol always="true">7000</defaultcontrol>
	<include>skinshortcuts-template-hubWidgetReloadTrick</include>
	<controls>

		<!-- Fanart -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<include>VisibleFadeAnimation</include>
			<include>WindowFadeAnimation</include>
			<fadetime>400</fadetime>
			<colordiffuse>FanartDiffuse</colordiffuse>
			<!--texture background="true" diffuse="diffuse.png" colordiffuse="$VAR[FanartColor]">$INFO[ListItem.Art(fanart)]</texture-->
			<texture background="true">$INFO[Container(50).ListItem.Art(fanart)]</texture>
			<animation effect="fade" start="100" end="0" condition="[Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
			<animation effect="fade" start="70" end="70" condition="![Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)]">Conditional</animation>
		</control>

		<include name="Time">
			<param name="heading">Hub</param>
		</include>

		<control type="group">
			<!-- Lumos animation -->
			<animation type="WindowOpen" condition="IsEmpty(Skin.String(menuStyle))">
				<effect type="slide" start="0,-200" end="0,0" time="200" />
				<effect type="fade" start="0" end="100" time="200" />
			</animation>
			<animation type="WindowClose" condition="IsEmpty(Skin.String(menuStyle))">
				<effect type="slide" start="0,0" end="0,-200" time="200" />
				<effect type="fade" start="100" end="0" time="200" />
			</animation>

			<!-- Horizontal animation -->
			<animation type="WindowOpen" condition="StringCompare(Skin.String(menuStyle),horizontal)">
				<effect type="slide" start="0,200" end="0,0" time="200" />
				<effect type="fade" start="0" end="100" time="200" />
			</animation>
			<animation type="WindowClose" condition="StringCompare(Skin.String(menuStyle),horizontal)">
				<effect type="slide" start="0,0" end="0,200" time="200" />
				<effect type="fade" start="100" end="0" time="200" />
			</animation>

			<!-- Vertical animation -->
			<animation type="WindowOpen" condition="StringCompare(Skin.String(menuStyle),vertical)">
				<effect type="slide" start="-200,0" end="0,0" time="200" />
				<effect type="fade" start="0" end="100" time="200" />
			</animation>
			<animation type="WindowClose" condition="StringCompare(Skin.String(menuStyle),vertical)">
				<effect type="slide" start="0,0" end="-200,0" time="200" />
				<effect type="fade" start="100" end="0" time="200" />
			</animation>


			<left>265</left>
			<top>310</top>
			<control type="image">
				<left>830</left>
				<top>0</top>
				<width>325</width>
				<height>480</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<include>skinshortcuts-template-hub</include>
			<control type="group" id="50">
				<include>skinshortcuts-template-hubWidgets</include>
			</control>

		</control>
	</controls>

</window>