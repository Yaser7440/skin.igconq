<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype55">

		<control type="group">
			<visible>Control.IsVisible(55)</visible>

			<!-- Thumbs -->
			<control type="panel" id="55">
				<left>150</left>
				<top>170</top>
				<width>1620</width>
				<height>666</height>
				<onleft>65</onleft>
				<onright>noop</onright>
				<onup>55</onup>
				<ondown>55</ondown>
				<pagecontrol>65</pagecontrol>
				<preloaditems>4</preloaditems>
				<viewtype label="$LOCALIZE[31078]">icon</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(albums) | Container.Content(addons)</visible>

				<itemlayout width="270" height="222">
					<control type="image">
						<left>34</left>
						<width>202</width>
						<height>202</height>
						<colordiffuse>DiffusePosterNF</colordiffuse>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center">scale</aspectratio>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>177</left>
						<top>452</top>
						<width>35</width>
						<height>49</height>
						<texture>$VAR[StatusOverlayWide]</texture>
					</control>
				</itemlayout>

				<focusedlayout width="270" height="222">
					<control type="image">
						<left>34</left>
						<width>202</width>
						<height>202</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center">scale</aspectratio>
					</control>
					<control type="image">
						<left>34</left>
						<width>202</width>
						<height>202</height>
						<texture>views/OverlayPosterNF.png</texture>
						<visible>Skin.HasSetting(Overlays)</visible>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>177</left>
						<top>452</top>
						<width>35</width>
						<height>49</height>
						<texture>$VAR[StatusOverlayWide]</texture>
					</control>
				</focusedlayout>
			</control>

			<control type="group">
				<centerleft>50%</centerleft>
				<top>850</top>
				<width>1920</width>
				<height>100</height>

				<!-- Title -->
				<control type="label">
					<left>90</left>
					<top>0</top>
					<width>1740</width>
					<height>72</height>
					<font>Font72</font>
					<align>center</align>
					<textcolor>$VAR[TextColor1]</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(55)">Conditional</animation>
				</control>

				<!-- Details -->
				<control type="label">
					<left>90</left>
					<top>88</top>
					<width>1740</width>
					<height>27</height>
					<font>Font27</font>
					<align>center</align>
					<label>$VAR[Label2]</label>
					<textcolor>$VAR[TextColor2]</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(55)">Conditional</animation>
				</control>

			</control>

		</control>

	</include>

</includes>
