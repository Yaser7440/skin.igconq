<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- volumebar -->
	<controls>
		<control type="group">
			<visible>VideoPlayer.IsFullscreen | Window.IsActive(visualisation)</visible>
			<visible>!Window.IsVisible(notification) + !Window.IsVisible(extendedprogressdialog)</visible>
			<animation effect="slide" start="300,0" end="0,0" time="200">Visible</animation>
			<animation effect="slide" end="300,0" time="200">Hidden</animation>
			<animation effect="slide" start="300,0" end="0,0" time="200">WindowOpen</animation>
			<animation effect="slide" end="300,0" time="200" delay="200">WindowClose</animation>

			<control type="image">
				<right>0</right>
				<top>105</top>
				<width>300</width>
				<height>43</height>
				<texture colordiffuse="$INFO[Skin.String(color.background)]">dialogs/Background.png</texture>
			</control>

			<control type="label">
				<right>0</right>
				<top>110</top>
				<width>290</width>
				<height>33</height>
				<label>[LIGHT]$LOCALIZE[13376] $INFO[Control.GetLabel(404),,%][/LIGHT]</label>
				<font>Font33</font>
				<textcolor>$VAR[DialogColor2]</textcolor>
			</control>

			<!-- Progress -->
			<control type="progress" id="404">
				<visible>false</visible>
				<info>player.volume</info>
			</control>

		</control>

	</controls>

</window>