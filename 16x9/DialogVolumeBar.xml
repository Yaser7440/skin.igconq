<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="slide" start="410,0" time="200">WindowOpen</animation>
	<animation effect="slide" end="410,0" time="200">WindowClose</animation>
	<!-- volumebar -->
	<controls>
		<control type="image">
			<right>0</right>
			<top>110</top>
			<width>550</width>
			<height>40</height>
			<texture colordiffuse="$INFO[Skin.String(color.background)]">dialogs/Background.png</texture>
		</control>

		<!-- Heading -->
		<control type="label">
			<right>10</right>
			<top>120</top>
			<width>530</width>
			<height>20</height>
			<align>left</align>
			<scroll>true</scroll>
			<font>Font27</font>
			<label>[LIGHT]$LOCALIZE[13376][/LIGHT] $INFO[Control.GetLabel(404),,%]</label>
		</control>

		<!-- Progress -->
		<control type="progress" id="404">
			<visible>false</visible>
			<info>player.volume</info>
		</control>
	</controls>

</window>