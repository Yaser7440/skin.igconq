<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- yesnodialog -->
	<defaultcontrol always="true">10</defaultcontrol>
	<include>WindowFadeAnimation</include>
	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Curve -->
		<control type="image">
			<left>20</left>
			<top>20</top>
			<width>1880</width>
			<height>784</height>
			<texture border="0,0,0,40">common/CurveHorz.png</texture>
			<visible>Skin.HasSetting(ShowCurve)</visible>
		</control>

		<include content="Time">
			<param name="heading">$INFO[Control.GetLabel(1)]</param>
		</include>

		<!-- Heading -->
		<control type="label" id="1">
			<left>-15000</left>
			<top>40</top>
			<width>600</width>
			<height>48</height>
			<align>center</align>
			<font>Font48</font>
			<textcolor>$VAR[DialogColor1]</textcolor>
		</control>

		<!-- Details -->
		<control type="textbox" id="9">
			<centerleft>50%</centerleft>
			<top>125</top>
			<width>1000</width>
			<height>600</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>Font42</font>
			<autoscroll>False</autoscroll>
			<textcolor>$VAR[DialogColor1]</textcolor>
		</control>

		<!-- Progress -->
		<control type="progress" id="20">
			<description>Progressbar</description>
			<centerleft>50%</centerleft>
			<top>600</top>
			<width>760</width>
			<height>20</height>
			<texturebg>common/ScrollBackgroundHorizontal.png</texturebg>
			<midtexture colordiffuse="DialogOverlayColorFO">common/ScrollbarGripHorizontalFO.png</midtexture>
			<info>System.Progressbar</info>
		</control>

		<!-- Buttons -->
		<control type="grouplist">
			<left>460</left>
			<top>850</top>
			<width>1000</width>
			<height>36</height>
			<orientation>horizontal</orientation>
			<align>center</align>
			<itemgap>0</itemgap>
			<control type="button" id="10">
				<width>200</width>
				<height>36</height>
				<font>Font36</font>
				<align>center</align>
			</control>
			<control type="button" id="11">
				<width>200</width>
				<height>36</height>
				<font>Font36</font>
				<align>center</align>
			</control>
			<control type="button" id="12">
				<width>200</width>
				<height>36</height>
				<font>Font36</font>
				<align>center</align>
			</control>
		</control>

	</controls>

</window>