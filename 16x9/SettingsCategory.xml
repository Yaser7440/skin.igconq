<?xml version="1.0" encoding="utf-8"?>
<window>
	<!-- settingscategory -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<onload condition="String.IsEmpty(Window(settings).Property(ChangeSettingsLevel))">SetFocus(3)</onload>
	<onload condition="!String.IsEmpty(Window(settings).Property(ChangeSettingsLevel))">SetFocus(20)</onload>
	<onload condition="Window.Previous(skinsettings)">Right</onload>


	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Curve -->
		<control type="image">
			<right>20</right>
			<top>20</top>
			<width>1520</width>
			<height>1040</height>
			<texture border="40,0,0,0">common/Curve.png</texture>
			<visible>Skin.HasSetting(ShowCurve)</visible>
		</control>

		<!-- Curve -->
		<control type="image">
			<right>20</right>
			<top>20</top>
			<width>1172</width>
			<height>1040</height>
			<texture border="40,0,0,0">common/Curve.png</texture>
			<visible>Skin.HasSetting(ShowCurve)</visible>
			<animation effect="fade" start="100" end="0" time="0" condition="!ControlGroup(5).HasFocus + String.IsEmpty(Window(settings).Property(ChangeSettingsLevel))">Conditional</animation>
		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Main list (Left) -->
		<control type="grouplist" id="3">
			<left>150</left>
			<top>228</top>
			<width>300</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>3001</onleft>
			<onright>5</onright>
			<onup>noop</onup>
			<ondown>noop</ondown>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>
		</control>

		<!-- Sub list (Right) -->
		<control type="grouplist" id="5">
			<left>550</left>
			<top>228</top>
			<width>1220</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>3</onleft>
			<onright>998</onright>
			<onup>noop</onup>
			<ondown>noop</ondown>
			<orientation>vertical</orientation>
		</control>

		<!-- Settings description -->
		<control type="textbox" id="6">
			<left>550</left>
			<top>900</top>
			<width>1220</width>
			<height>118</height>
			<textcolor>$VAR[TextColor2]</textcolor>
			<shadowcolor>TextColor4</shadowcolor>
			<visible>ControlGroup(5).HasFocus</visible>
		</control>


		<!-- Options -->
		<control type="group" id="9002">
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture colordiffuse="44000000">dialogs/DialogTextBackground.png</texture>
				<animation effect="fade" start="0" end="100" time="200">Visible</animation>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
				<visible>Control.HasFocus(9001)</visible>
			</control>
			<control type="group">
				<left>-450</left>
				<top>0</top>
				<animation effect="slide" start="0,0" end="450,0" time="200" condition="ControlGroup(9002).HasFocus">Conditional</animation>
				<control type="button">
					<left>0</left>
					<top>0</top>
					<width>460</width>
					<height>1080</height>
					<onclick>noop</onclick>
				</control>

				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>450</width>
					<height>1080</height>
					<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3001">
					<left>20</left>
					<top>5</top> <!-- -5 because there is one spacer -->
					<width>410</width>
					<height>1040</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>3</onleft>
					<onright>3</onright>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<defaultcontrol always="true">99</defaultcontrol>

					<include content="SideMenuAnimation">
						<param name="containerID">3001</param>
					</include>

					<!-- Settings quick-nav -->
					<control type="button" id="90">
						<label>31074</label>
						<height>52</height>
						<onclick>ReplaceWindow(InterfaceSettings)</onclick>
					</control>
					<control type="button" id="91">
						<label>16003</label>
						<height>52</height>
						<onclick>ReplaceWindow(PlayerSettings)</onclick>
					</control>
					<control type="button" id="92">
						<label>14211</label>
						<height>52</height>
						<onclick>ReplaceWindow(MediaSettings)</onclick>
					</control>
					<control type="button" id="93">
						<label>31015</label>
						<height>52</height>
						<onclick>ReplaceWindow(PVRSettings)</onclick>
					</control>
					<control type="button" id="94">
						<label>13200</label>
						<height>52</height>
						<onclick>ReplaceWindow(Profiles)</onclick>
					</control>
					<control type="button" id="95">
						<label>14036</label>
						<height>52</height>
						<onclick>ReplaceWindow(ServiceSettings)</onclick>
					</control>
					<control type="button" id="96">
						<label>13000</label>
						<height>52</height>
						<onclick>ReplaceWindow(SystemSettings)</onclick>
					</control>
					<control type="button" id="97">
						<label>130</label>
						<height>52</height>
						<onclick>ReplaceWindow(SystemInfo)</onclick>
					</control>


					<control type="image" id="80">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>10</height>
						<texture>transparent.png</texture>
					</control>


					<!-- Change settings level -->
					<control type="label" id="81">
						<label>Settings level:</label>
						<textcolor>$VAR[TextColor2]</textcolor>
						<height>40</height>
					</control>
					<control type="button" id="20">
						<height>52</height>
						<onclick>SettingsLevelChange</onclick>
					</control>
				</control>
			</control>
		</control>

		<!-- Default label -->
		<control type="label" id="14">
			<width>1220</width>
			<height>66</height>
			<font>Font33</font>
			<align>center</align>
			<label>-</label>
			<textcolor>$VAR[TextColor2]</textcolor>
		</control>

		<!-- Default group button -->
		<control type="button" id="10">
			<width>300</width>
			<height>66</height>
			<font>Font33</font>
			<onclick>SetFocus(5)</onclick>
			<textcolor>$VAR[TextColor2]</textcolor>
			<focusedcolor>$VAR[TextColor1]</focusedcolor>
			<invalidcolor>TextColor4</invalidcolor>
			<disabledcolor>TextColor4</disabledcolor>
			<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="ControlGroup(5).HasFocus">Conditional</animation>
		</control>

		<!-- Default button -->
		<control type="button" id="7">
			<width>1220</width>
			<height>66</height>
			<font>Font33</font>
			<textwidth>900</textwidth>
			<textcolor>$VAR[TextColor2]</textcolor>
			<focusedcolor>$VAR[TextColor1]</focusedcolor>
			<invalidcolor>TextColor4</invalidcolor>
			<disabledcolor>TextColor4</disabledcolor>
		</control>

		<!-- Default radiobutton -->
		<control type="radiobutton" id="8">
			<width>1220</width>
			<height>66</height>
			<font>Font33</font>
			<textwidth>900</textwidth>
			<textcolor>$VAR[TextColor2]</textcolor>
			<focusedcolor>$VAR[TextColor1]</focusedcolor>
			<disabledcolor>TextColor4</disabledcolor>
		</control>

		<!-- Default spincontrolex -->
		<control type="spincontrolex" id="9">
			<width>1220</width>
			<height>66</height>
			<font>Font33</font>
			<textwidth>900</textwidth>
			<textcolor>$VAR[TextColor2]</textcolor>
			<focusedcolor>$VAR[TextColor1]</focusedcolor>
			<disabledcolor>TextColor4</disabledcolor>
		</control>

		<!-- Default sliderex -->
		<control type="sliderex" id="13">
			<width>1220</width>
			<height>66</height>
			<font>Font33</font>
			<textwidth>900</textwidth>
			<textcolor>$VAR[TextColor2]</textcolor>
			<focusedcolor>$VAR[TextColor1]</focusedcolor>
			<disabledcolor>TextColor4</disabledcolor>
		</control>

		<!-- Default image -->
		<control type="image" id="11">
			<width>1220</width>
			<height>66</height>
			<texture border="2" colordiffuse="$VAR[DialogColor2]">common/Divider.png</texture>
		</control>

	</controls>

</window>